local remotes = {}
for _, obj in pairs(game:GetDescendants()) do
    if (obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction")) and not obj:IsDescendantOf(game.Players) then
        table.insert(remotes, obj)
    end
end

print("ğŸ§¨ ÙØ­Øµ", #remotes, "Remote(s)...")

for _, r in pairs(remotes) do
    local success, result = pcall(function()
        if r:IsA("RemoteEvent") then
            r:FireServer("test", true, 999)
        elseif r:IsA("RemoteFunction") then
            return r:InvokeServer("test", true, 999)
        end
    end)

    if success then
        print("âœ…", r:GetFullName(), "Ù†Ø¬Ø­ | Ø§Ù„Ù†ØªÙŠØ¬Ø©:", result)
    else
        print("âŒ", r:GetFullName(), "ÙØ´Ù„ |", result)
    end
end
