-- أداة تحكم صوتي في GlobalPianoConnector 🎹🔊
local gui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 300, 0, 220)
frame.Position = UDim2.new(0.5, -150, 0, 100)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Text = "🎼 تحكم بالبيانو - باكدور الصوت"
title.TextColor3 = Color3.new(1, 0.2, 0.2)
title.BackgroundTransparency = 1
title.TextScaled = true
title.Font = Enum.Font.GothamBold

local function getRemote()
    local remote = nil
    pcall(function()
        remote = workspace:FindFirstChild("Folder")
            and workspace.Folder:FindFirstChild("Folder")
            and workspace.Folder.Folder:FindFirstChild("GlobalPianoConnector")
    end)
    return remote
end

local function sendRemote(command, value)
    local r = getRemote()
    if r and r:IsA("RemoteEvent") then
        r:FireServer(command, value)
    end
end

local upBtn = Instance.new("TextButton", frame)
upBtn.Size = UDim2.new(1, -20, 0, 40)
upBtn.Position = UDim2.new(0, 10, 0, 50)
upBtn.Text = "🔊 رفع الصوت إلى 10"
upBtn.BackgroundColor3 = Color3.fromRGB(60, 120, 60)
upBtn.TextColor3 = Color3.new(1, 1, 1)
upBtn.TextScaled = true
upBtn.Font = Enum.Font.GothamBold
upBtn.MouseButton1Click:Connect(function()
    sendRemote("volume", 10)
end)

local downBtn = Instance.new("TextButton", frame)
downBtn.Size = UDim2.new(1, -20, 0, 40)
downBtn.Position = UDim2.new(0, 10, 0, 95)
downBtn.Text = "🔉 خفض الصوت إلى 1"
downBtn.BackgroundColor3 = Color3.fromRGB(120, 60, 60)
downBtn.TextColor3 = Color3.new(1, 1, 1)
downBtn.TextScaled = true
downBtn.Font = Enum.Font.GothamBold
downBtn.MouseButton1Click:Connect(function()
    sendRemote("volume", 1)
end)

local noteBtn = Instance.new("TextButton", frame)
noteBtn.Size = UDim2.new(1, -20, 0, 40)
noteBtn.Position = UDim2.new(0, 10, 0, 140)
noteBtn.Text = "🎹 عزف نغمة C4"
noteBtn.BackgroundColor3 = Color3.fromRGB(100, 100, 200)
noteBtn.TextColor3 = Color3.new(1, 1, 1)
noteBtn.TextScaled = true
noteBtn.Font = Enum.Font.GothamBold
noteBtn.MouseButton1Click:Connect(function()
    sendRemote("play", "C4")
end)
