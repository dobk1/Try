-- فاحص الباكدورات الذكي 🔍🔥
-- يركّز على الباكدورات المشكوك بيها + القوية جداً
local gui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 400, 0, 300)
frame.Position = UDim2.new(0.5, -200, 0, 100)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Text = "🚨 فاحص الباكدورات الذكية"
title.TextColor3 = Color3.new(1, 0, 0)
title.BackgroundTransparency = 1
title.TextScaled = true
title.Font = Enum.Font.GothamBold

local scroll = Instance.new("ScrollingFrame", frame)
scroll.Position = UDim2.new(0, 0, 0, 35)
scroll.Size = UDim2.new(1, 0, 1, -35)
scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
scroll.BackgroundTransparency = 1
scroll.ScrollBarThickness = 6

local keywords = {
    "Admin", "Kick", "Ban", "Cuff", "Handler", "Execute", "Command", "Retriever", "Server", "Control", "Teleport", "Exploit", "Rank", "RemoteAccess"
}

local function isSuspicious(name)
    for _, word in ipairs(keywords) do
        if string.lower(name):find(string.lower(word)) then
            return true
        end
    end
    return false
end

local count = 0
for _, obj in ipairs(game:GetDescendants()) do
    if (obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction")) and not obj:IsDescendantOf(game.Players) then
        if isSuspicious(obj.Name) or isSuspicious(obj:GetFullName()) then
            local label = Instance.new("TextLabel", scroll)
            label.Size = UDim2.new(1, -10, 0, 30)
            label.Position = UDim2.new(0, 5, 0, count * 32)
            label.Text = "📡 " .. obj.ClassName .. ": " .. obj:GetFullName()
            label.TextColor3 = Color3.new(1, 1, 1)
            label.BackgroundTransparency = 1
            label.TextScaled = true
            label.Font = Enum.Font.SourceSansBold
            count += 1
        end
    end
end

if count == 0 then
    local none = Instance.new("TextLabel", scroll)
    none.Size = UDim2.new(1, -10, 0, 30)
    none.Position = UDim2.new(0, 5, 0, 0)
    none.Text = "✅ لا توجد باكدورات مشبوهة واضحة"
    none.TextColor3 = Color3.new(0, 1, 0)
    none.BackgroundTransparency = 1
    none.TextScaled = true
    none.Font = Enum.Font.SourceSansBold
end

scroll.CanvasSize = UDim2.new(0, 0, 0, count * 32)
