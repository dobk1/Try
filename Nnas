local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

-- واجهة GUI
local gui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 300, 0, 300)
frame.Position = UDim2.new(0.5, -150, 0.5, -150)
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Text = "☁️ DOBK Sky Jail V3"
title.TextColor3 = Color3.new(1, 0, 0.2)
title.BackgroundTransparency = 1
title.TextScaled = true
title.Font = Enum.Font.GothamBold

-- زر الطيران
local btnFly = Instance.new("TextButton", frame)
btnFly.Size = UDim2.new(1, -20, 0, 40)
btnFly.Position = UDim2.new(0, 10, 0, 40)
btnFly.Text = "🚀 طيرني بعيد فعلياً"
btnFly.BackgroundColor3 = Color3.fromRGB(60, 60, 140)
btnFly.TextColor3 = Color3.new(1, 1, 1)
btnFly.TextScaled = true
btnFly.Font = Enum.Font.GothamBold

-- زر تجميع اللاعبين
local btnGather = Instance.new("TextButton", frame)
btnGather.Size = UDim2.new(1, -20, 0, 40)
btnGather.Position = UDim2.new(0, 10, 0, 90)
btnGather.Text = "☁️ اجمع اللاعبين فوقي"
btnGather.BackgroundColor3 = Color3.fromRGB(120, 0, 0)
btnGather.TextColor3 = Color3.new(1, 1, 1)
btnGather.TextScaled = true
btnGather.Font = Enum.Font.GothamBold

-- زر سحب أدوات اللاعبين (وهمي)
local btnGrabAllTools = Instance.new("TextButton", frame)
btnGrabAllTools.Size = UDim2.new(1, -20, 0, 40)
btnGrabAllTools.Position = UDim2.new(0, 10, 0, 140)
btnGrabAllTools.Text = "🧤 اسحب أدوات اللاعبين (وهمي)"
btnGrabAllTools.BackgroundColor3 = Color3.fromRGB(0, 120, 0)
btnGrabAllTools.TextColor3 = Color3.new(1, 1, 1)
btnGrabAllTools.TextScaled = true
btnGrabAllTools.Font = Enum.Font.GothamBold

-- زر سحب الكلبشات فعلياً
local btnStealCuffs = Instance.new("TextButton", frame)
btnStealCuffs.Size = UDim2.new(1, -20, 0, 40)
btnStealCuffs.Position = UDim2.new(0, 10, 0, 190)
btnStealCuffs.Text = "🔒 اسحب الكلبشات من اللاعبين"
btnStealCuffs.BackgroundColor3 = Color3.fromRGB(80, 20, 140)
btnStealCuffs.TextColor3 = Color3.new(1, 1, 1)
btnStealCuffs.TextScaled = true
btnStealCuffs.Font = Enum.Font.GothamBold

-- تنفيذ الطيران
btnFly.MouseButton1Click:Connect(function()
    local floatPos = Vector3.new(9999, 5000, 9999)
    LocalPlayer.Character:SetPrimaryPartCFrame(CFrame.new(floatPos))
    task.wait(0.2)
    if hrp then hrp.Anchored = true end
end)

-- تجميع اللاعبين فوقك
btnGather.MouseButton1Click:Connect(function()
    local basePos = hrp.Position + Vector3.new(0, 5, 0)
    for _, plr in pairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
            plr.Character.HumanoidRootPart.CFrame = CFrame.new(basePos + Vector3.new(math.random(-3,3), 0, math.random(-3,3)))
        end
    end
end)

-- سحب أدوات اللاعبين (وهمي فقط عندك)
btnGrabAllTools.MouseButton1Click:Connect(function()
    for _, plr in pairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer then
            local backpack = plr:FindFirstChild("Backpack")
            if backpack then
                for _, tool in pairs(backpack:GetChildren()) do
                    if tool:IsA("Tool") then
                        local clone = tool:Clone()
                        clone.Name = "[🎒مسروق] " .. tool.Name
                        clone.Parent = LocalPlayer.Backpack
                    end
                end
            end
            if plr.Character then
                for _, tool in pairs(plr.Character:GetChildren()) do
                    if tool:IsA("Tool") then
                        local clone = tool:Clone()
                        clone.Name = "[🤚مسروق] " .. tool.Name
                        clone.Parent = LocalPlayer.Backpack
                    end
                end
            end
        end
    end
end)

-- سحب الكلبشات فعلياً (Clone من اللاعبين)
btnStealCuffs.MouseButton1Click:Connect(function()
    local targetToolName = "Handcuffs" -- غيره إذا اسم الكلبشة مختلف
    for _, plr in pairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer then
            local backpack = plr:FindFirstChild("Backpack")
            if backpack then
                for _, tool in pairs(backpack:GetChildren()) do
                    if tool:IsA("Tool") and tool.Name == targetToolName then
                        local clone = tool:Clone()
                        clone.Name = "[🔒كلبشة]" .. tool.Name
                        clone.Parent = LocalPlayer.Backpack
                    end
                end
            end
            if plr.Character then
                for _, tool in pairs(plr.Character:GetChildren()) do
                    if tool:IsA("Tool") and tool.Name == targetToolName then
                        local clone = tool:Clone()
                        clone.Name = "[🔒كلبشة]" .. tool.Name
                        clone.Parent = LocalPlayer.Backpack
                    end
                end
            end
        end
    end
end)
