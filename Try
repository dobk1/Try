local lp = game.Players.LocalPlayer
local char = lp.Character or lp.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

-- ✈️ يطيرك بعيد أول ما يبدأ
hrp.CFrame = hrp.CFrame * CFrame.new(0, 0, -999) -- طيران بعيد

wait(1) -- ننتظر شوي قبل نبدأ الكلبشة

-- سبام ClickDetectors لكل جسم لاعب
local function spamClickDetectors(target)
    for i = 1, 5 do
        for _, part in pairs(target:GetDescendants()) do
            if part:IsA("ClickDetector") then
                fireclickdetector(part)
            end
        end
        wait(0.1)
    end
end

-- الكلبشة الجماعية المستمرة
while true do
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= lp and player.Character then
            spamClickDetectors(player.Character)
            wait(0.3)
        end
    end
    wait(2.5) -- كل 2.5 ثانية يعيد اللفة
end
