end)

-- Ø³ÙƒØ±Ø¨Øª Ø§Ù„Ø³ÙƒÙ†
local running = false
skinStartBtn.MouseButton1Click:Connect(function()
	if running then return end
	running = true
	spawn(function()
		local count = 0
		while running do
			count = count + 1
			game.ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("/e ;char me " .. tostring(count), "Team")
			wait(1.5)
		end
	end)
end)

skinStopBtn.MouseButton1Click:Connect(function()
	running = false
end)

-- Ø³ÙƒØ±Ø¨Øª Ø§Ù„ÙƒÙ„Ø¨Ø´Ø© Ø§Ù„Ø°ÙƒÙŠØ©
local clamping = false
arrestStartBtn.MouseButton1Click:Connect(function()
	if clamping then return end
	clamping = true

	local Players = game:GetService("Players")
	local LocalPlayer = Players.LocalPlayer
	local farPos = Vector3.new(0, 1000, 0)

	spawn(function()
		while clamping do
			for _, target in pairs(Players:GetPlayers()) do
				if target ~= LocalPlayer and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
					local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
					if hrp then
						hrp.CFrame = target.Character.HumanoidRootPart.CFrame * CFrame.new(0, 0, 2)
						wait(1.5)
						hrp.CFrame = CFrame.new(farPos)
						wait(1)
					end
				end
			end
		end
	end)
end)

arrestStopBtn.MouseButton1Click:Connect(function()
	clamping = false
end)

-- Ø³ÙƒØ±Ø¨Øª Ø±Ø§Ø¬Ø¯ÙŠ Ø¬Ù…Ø§Ø¹ÙŠ
rajdiBtn.MouseButton1Click:Connect(function()
	local Players = game:GetService("Players")
	local LocalPlayer = Players.LocalPlayer
	local myHRP = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
	if not myHRP then
		warn("âŒ Ù…Ø§ Ù„ÙƒÙŠØª HumanoidRootPart Ù…Ø§Ù„Ùƒ!")
		return
	end

	for _, player in pairs(Players:GetPlayers()) do
		if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
			local targetHRP = player.Character:WaitForChild("HumanoidRootPart")

			local startTime = tick()

			while tick() - startTime < 4 do
				local behind = targetHRP.CFrame * CFrame.new(0, 0, -2)
				myHRP.CFrame = CFrame.new(behind.Position, targetHRP.Position)

				local tool = LocalPlayer.Character:FindFirstChildOfClass("Tool")
				if tool then
					tool:Activate()
				end

				wait(0.4)
			end
		end
	end
end)
